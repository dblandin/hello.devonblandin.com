!!! 5
%html
  %head
    %title= 'Devon Blandin'
    %meta{ :content => 'A Software Engineer in Chicago, IL', :name => 'description' }
    %meta{ :content => 'Devon Blandin', :name => 'author' }
    %meta{ :content => '3 days', :name => 'revisit-after' }
    %link{ :href => '//netdna.bootstrapcdn.com/bootswatch/2.1.0/cerulean/bootstrap.min.css', :rel => 'stylesheet' }
    %script{ :src => '//netdna.bootstrapcdn.com/twitter-bootstrap/2.1.1/js/bootstrap.min.js' }
  %body
    .container
      .content
        .page-header
          %H1 Devon Blandin
          I am a <strong>software engineer</strong> focusing on web and mobile application development. My academic and professional background includes work in computer science, design, and human-computer interaction.
        .row
          .span10
            = yield
      %footer

    - if Sinatra::Base.production?
      :javascript
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-4948585-3']);
        _gaq.push(['_setDomainName', 'devon.io']);
        _gaq.push(['_trackPageview']);

        (function() {
          var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
          ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
